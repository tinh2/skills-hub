# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/skillshub?schema=public"

# GitHub OAuth
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"
# Must match the callback URL registered in your GitHub OAuth App settings.
# For local dev with Next.js on port 3001: http://localhost:3001/auth/callback
# The browser redirects here after GitHub auth, then the frontend exchanges the code with the API.
GITHUB_CALLBACK_URL="http://localhost:3001/auth/callback"

# Encryption key for GitHub access tokens stored in DB (32-byte hex string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
GITHUB_TOKEN_ENCRYPTION_KEY="your_64_char_hex_encryption_key_here"

# JWT
JWT_SECRET="your-jwt-secret-at-least-32-characters-long"
JWT_EXPIRES_IN="15m"
REFRESH_TOKEN_EXPIRES_IN_DAYS=7

# URLs
FRONTEND_URL="http://localhost:3001"
API_URL="http://localhost:3000"

# Frontend env (used by Next.js — prefix with NEXT_PUBLIC_)
NEXT_PUBLIC_API_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_URL="http://localhost:3001"
# Internal API URL for server-side rendering in Docker (e.g., http://api:3000)
# API_INTERNAL_URL="http://api:3000"

# Server
PORT=3000
HOST="0.0.0.0"
NODE_ENV="development"

# Redis (optional — used for rate limiting)
# REDIS_URL="redis://localhost:6379"

# Sentry (optional — leave blank to disable error monitoring)
# SENTRY_DSN="https://your-dsn@sentry.io/project-id"
# NEXT_PUBLIC_SENTRY_DSN="https://your-dsn@sentry.io/project-id"

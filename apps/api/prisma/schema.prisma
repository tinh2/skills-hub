generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  githubId    Int      @unique
  username    String   @unique
  displayName String?
  avatarUrl   String?
  bio         String?
  githubUrl   String
  email       String?
  githubAccessToken String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  skills           Skill[]
  reviews          Review[]
  reviewVotes      ReviewVote[]
  apiKeys          ApiKey[]
  installs         Install[]
  skillLikes       SkillLike[]
  refreshTokens    RefreshToken[]
  orgMemberships   OrgMembership[]
  invitesSent      OrgInvite[]     @relation("InviteSender")
  invitesReceived  OrgInvite[]     @relation("InviteRecipient")
  sandboxRuns      SandboxRun[]
  agents           Agent[]
}

model ApiKey {
  id         String    @id @default(cuid())
  userId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  name       String
  keyHash    String    @unique
  keyPrefix  String
  lastUsedAt DateTime?
  expiresAt  DateTime?
  createdAt  DateTime  @default(now())

  @@index([userId])
}

model RefreshToken {
  id        String   @id @default(cuid())
  tokenHash String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
}

model Skill {
  id            String      @id @default(cuid())
  slug          String      @unique
  name          String
  description   String
  categoryId    String
  category      Category    @relation(fields: [categoryId], references: [id])
  authorId      String
  author        User        @relation(fields: [authorId], references: [id], onDelete: Cascade)
  orgId         String?
  org           Organization? @relation(fields: [orgId], references: [id], onDelete: SetNull)
  status        SkillStatus @default(DRAFT)
  visibility    Visibility  @default(PUBLIC)
  platforms     Platform[]
  qualityScore  Int?
  installCount  Int         @default(0)
  likeCount     Int         @default(0)
  avgRating     Float?
  reviewCount   Int         @default(0)
  githubRepoUrl  String?
  searchVector   Unsupported("tsvector")?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  versions           SkillVersion[]
  tags               SkillTag[]
  reviews            Review[]
  installs           Install[]
  likes              SkillLike[]
  media              SkillMedia[]
  compositionParents CompositionSkill[] @relation("ChildSkill")
  compositionOf      Composition?       @relation("CompositionRoot")
  testCases          TestCase[]
  sandboxRuns        SandboxRun[]
  agents             Agent[]

  @@index([categoryId])
  @@index([authorId])
  @@index([orgId])
  @@index([status, visibility])
  @@index([qualityScore(sort: Desc)])
  @@index([installCount(sort: Desc)])
  @@index([likeCount(sort: Desc)])
  @@index([avgRating(sort: Desc)])
  @@index([createdAt(sort: Desc)])
  @@index([updatedAt(sort: Desc)])
}

model Composition {
  id          String   @id @default(cuid())
  skillId     String   @unique
  skill       Skill    @relation("CompositionRoot", fields: [skillId], references: [id], onDelete: Cascade)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  children CompositionSkill[]
}

model CompositionSkill {
  id            String  @id @default(cuid())
  compositionId String
  composition   Composition @relation(fields: [compositionId], references: [id], onDelete: Cascade)
  childSkillId  String
  childSkill    Skill   @relation("ChildSkill", fields: [childSkillId], references: [id], onDelete: Cascade)
  sortOrder     Int     @default(0)
  isParallel    Boolean @default(false)

  @@unique([compositionId, childSkillId])
  @@index([compositionId])
}

model SkillVersion {
  id           String   @id @default(cuid())
  skillId      String
  skill        Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)
  version      String
  instructions String
  changelog    String?
  qualityScore Int?
  isLatest     Boolean  @default(true)
  createdAt    DateTime @default(now())

  @@unique([skillId, version])
  @@index([skillId, isLatest])
}

model Category {
  id          String @id @default(cuid())
  name        String @unique
  slug        String @unique
  description String
  icon        String?
  sortOrder   Int    @default(0)

  skills Skill[]
}

model Tag {
  id     String     @id @default(cuid())
  name   String     @unique
  skills SkillTag[]
}

model SkillTag {
  skillId String
  skill   Skill  @relation(fields: [skillId], references: [id], onDelete: Cascade)
  tagId   String
  tag     Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([skillId, tagId])
  @@index([tagId])
}

model Review {
  id        String   @id @default(cuid())
  skillId   String
  skill     Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  rating    Int
  title     String?
  body      String?
  usedFor   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  votes    ReviewVote[]
  response ReviewResponse?

  @@unique([skillId, authorId])
  @@index([skillId])
  @@index([authorId])
}

model ReviewResponse {
  id        String   @id @default(cuid())
  reviewId  String   @unique
  review    Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  body      String
  createdAt DateTime @default(now())
}

model ReviewVote {
  id       String  @id @default(cuid())
  reviewId String
  review   Review  @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  userId   String
  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  helpful  Boolean

  @@unique([reviewId, userId])
}

model Install {
  id        String   @id @default(cuid())
  skillId   String
  skill     Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  version   String
  platform  Platform
  createdAt DateTime @default(now())

  @@unique([skillId, userId])
  @@index([skillId])
  @@index([userId])
  @@index([createdAt])
}

enum SkillStatus {
  DRAFT
  PENDING_REVIEW
  PUBLISHED
  ARCHIVED
}

enum Platform {
  CLAUDE_CODE
  CURSOR
  CODEX_CLI
  OTHER
}

enum Visibility {
  PUBLIC
  PRIVATE
  UNLISTED
  ORG
}

enum OrgRole {
  ADMIN
  PUBLISHER
  MEMBER
}

enum InviteStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
}

model Organization {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String?
  avatarUrl   String?
  githubOrgId Int?     @unique
  githubOrg   String?  @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  memberships    OrgMembership[]
  invites        OrgInvite[]
  skills         Skill[]
  skillTemplates OrgSkillTemplate[]
}

model OrgMembership {
  id        String   @id @default(cuid())
  orgId     String
  org       Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      OrgRole  @default(MEMBER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([orgId, userId])
  @@index([userId])
}

model OrgInvite {
  id              String       @id @default(cuid())
  orgId           String
  org             Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  invitedByUserId String
  invitedBy       User         @relation("InviteSender", fields: [invitedByUserId], references: [id], onDelete: Cascade)
  inviteeUsername String?
  inviteeUserId   String?
  invitee         User?        @relation("InviteRecipient", fields: [inviteeUserId], references: [id], onDelete: SetNull)
  role            OrgRole      @default(MEMBER)
  status          InviteStatus @default(PENDING)
  token           String       @unique
  expiresAt       DateTime
  createdAt       DateTime     @default(now())

  @@index([orgId])
  @@index([inviteeUserId])
  @@index([invitedByUserId])
}

model OrgSkillTemplate {
  id           String       @id @default(cuid())
  orgId        String
  org          Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  name         String
  description  String?
  categorySlug String?
  platforms    Platform[]
  instructions String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@unique([orgId, name])
  @@index([orgId])
}

model SkillLike {
  id        String   @id @default(cuid())
  skillId   String
  skill     Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([skillId, userId])
  @@index([skillId])
  @@index([userId])
}

model SkillMedia {
  id        String    @id @default(cuid())
  skillId   String
  skill     Skill     @relation(fields: [skillId], references: [id], onDelete: Cascade)
  type      MediaType
  url       String
  caption   String?
  sortOrder Int       @default(0)
  createdAt DateTime  @default(now())

  @@index([skillId])
}

enum MediaType {
  SCREENSHOT
  YOUTUBE
}

// --- Behavioral Testing ---

model TestCase {
  id          String   @id @default(cuid())
  skillId     String
  skill       Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)
  label       String
  input       String
  expectedOutput String?
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())

  sandboxRuns SandboxRun[]

  @@index([skillId])
}

model SandboxRun {
  id           String        @id @default(cuid())
  skillId      String
  skill        Skill         @relation(fields: [skillId], references: [id], onDelete: Cascade)
  userId       String
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  testCaseId   String?
  testCase     TestCase?     @relation(fields: [testCaseId], references: [id], onDelete: SetNull)
  input        String
  output       String?
  status       SandboxStatus @default(PENDING)
  durationMs   Int?
  tokenCount   Int?
  errorMessage String?
  inputHash    String
  createdAt    DateTime      @default(now())

  @@index([skillId])
  @@index([userId])
  @@index([inputHash])
  @@index([createdAt(sort: Desc)])
}

enum SandboxStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  TIMEOUT
}

// --- Agent Execution ---

model Agent {
  id              String      @id @default(cuid())
  name            String
  skillId         String
  skill           Skill       @relation(fields: [skillId], references: [id], onDelete: Cascade)
  ownerId         String
  owner           User        @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  status          AgentStatus @default(STOPPED)
  triggerType     TriggerType @default(MANUAL)
  triggerConfig   Json?
  channelType     String?
  channelConfig   Json?
  modelProvider   String      @default("anthropic")
  modelId         String      @default("claude-sonnet-4-5-20250514")
  openfangHandId  String?
  executionCount  Int         @default(0)
  lastExecutedAt  DateTime?
  lastError       String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  executions AgentExecution[]

  @@index([ownerId])
  @@index([skillId])
  @@index([status])
}

model AgentExecution {
  id           String          @id @default(cuid())
  agentId      String
  agent        Agent           @relation(fields: [agentId], references: [id], onDelete: Cascade)
  status       ExecutionStatus @default(RUNNING)
  input        String?
  output       String?
  durationMs   Int?
  tokenCount   Int?
  errorMessage String?
  triggeredBy  String
  createdAt    DateTime        @default(now())

  @@index([agentId])
  @@index([createdAt(sort: Desc)])
}

enum AgentStatus {
  RUNNING
  PAUSED
  STOPPED
  ERROR
}

enum TriggerType {
  MANUAL
  SCHEDULE
  WEBHOOK
  CHANNEL
}

enum ExecutionStatus {
  RUNNING
  COMPLETED
  FAILED
  TIMEOUT
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  githubId    Int      @unique
  username    String   @unique
  displayName String?
  avatarUrl   String?
  bio         String?
  githubUrl   String
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  skills        Skill[]
  reviews       Review[]
  reviewVotes   ReviewVote[]
  apiKeys       ApiKey[]
  installs      Install[]
  refreshTokens RefreshToken[]
}

model ApiKey {
  id         String    @id @default(cuid())
  userId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  name       String
  keyHash    String    @unique
  keyPrefix  String
  lastUsedAt DateTime?
  expiresAt  DateTime?
  createdAt  DateTime  @default(now())

  @@index([userId])
}

model RefreshToken {
  id        String   @id @default(cuid())
  tokenHash String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
}

model Skill {
  id            String      @id @default(cuid())
  slug          String      @unique
  name          String
  description   String
  categoryId    String
  category      Category    @relation(fields: [categoryId], references: [id])
  authorId      String
  author        User        @relation(fields: [authorId], references: [id], onDelete: Cascade)
  status        SkillStatus @default(DRAFT)
  visibility    Visibility  @default(PUBLIC)
  platforms     Platform[]
  qualityScore  Int?
  installCount  Int         @default(0)
  avgRating     Float?
  reviewCount   Int         @default(0)
  githubRepoUrl String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  versions           SkillVersion[]
  tags               SkillTag[]
  reviews            Review[]
  installs           Install[]
  compositionParents CompositionSkill[] @relation("ChildSkill")
  compositionOf      Composition?       @relation("CompositionRoot")

  @@index([categoryId])
  @@index([authorId])
  @@index([status, visibility])
  @@index([qualityScore(sort: Desc)])
  @@index([installCount(sort: Desc)])
  @@index([createdAt(sort: Desc)])
  @@index([updatedAt(sort: Desc)])
}

model Composition {
  id          String   @id @default(cuid())
  skillId     String   @unique
  skill       Skill    @relation("CompositionRoot", fields: [skillId], references: [id], onDelete: Cascade)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  children CompositionSkill[]
}

model CompositionSkill {
  id            String  @id @default(cuid())
  compositionId String
  composition   Composition @relation(fields: [compositionId], references: [id], onDelete: Cascade)
  childSkillId  String
  childSkill    Skill   @relation("ChildSkill", fields: [childSkillId], references: [id])
  sortOrder     Int     @default(0)
  isParallel    Boolean @default(false)

  @@unique([compositionId, childSkillId])
  @@index([compositionId])
}

model SkillVersion {
  id           String   @id @default(cuid())
  skillId      String
  skill        Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)
  version      String
  instructions String
  changelog    String?
  qualityScore Int?
  isLatest     Boolean  @default(true)
  createdAt    DateTime @default(now())

  @@unique([skillId, version])
  @@index([skillId, isLatest])
}

model Category {
  id          String @id @default(cuid())
  name        String @unique
  slug        String @unique
  description String
  icon        String?
  sortOrder   Int    @default(0)

  skills Skill[]
}

model Tag {
  id     String     @id @default(cuid())
  name   String     @unique
  skills SkillTag[]

  @@index([name])
}

model SkillTag {
  skillId String
  skill   Skill  @relation(fields: [skillId], references: [id], onDelete: Cascade)
  tagId   String
  tag     Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([skillId, tagId])
}

model Review {
  id        String   @id @default(cuid())
  skillId   String
  skill     Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  rating    Int
  title     String?
  body      String?
  usedFor   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  votes    ReviewVote[]
  response ReviewResponse?

  @@unique([skillId, authorId])
  @@index([skillId])
  @@index([authorId])
}

model ReviewResponse {
  id        String   @id @default(cuid())
  reviewId  String   @unique
  review    Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  body      String
  createdAt DateTime @default(now())
}

model ReviewVote {
  id       String  @id @default(cuid())
  reviewId String
  review   Review  @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  userId   String
  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  helpful  Boolean

  @@unique([reviewId, userId])
}

model Install {
  id        String   @id @default(cuid())
  skillId   String
  skill     Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  version   String
  platform  Platform
  createdAt DateTime @default(now())

  @@unique([skillId, userId])
  @@index([skillId])
  @@index([userId])
  @@index([createdAt])
}

enum SkillStatus {
  DRAFT
  PENDING_REVIEW
  PUBLISHED
  ARCHIVED
}

enum Platform {
  CLAUDE_CODE
  CURSOR
  CODEX_CLI
  OTHER
}

enum Visibility {
  PUBLIC
  PRIVATE
  UNLISTED
}
